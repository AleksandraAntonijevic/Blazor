@page "/DoubleFactorialDoWhileBackward"


<h1>Double Factorial</h1>
<br/>
<table>
    <tr>
        <td>Number:</td>
        <td>
            <input style="text-align:right" @bind="number"/>
        </td>
    </tr>
    <tr>
        <td style="text-align:center" colspan="2">
            <button title="by backward counting" @onclick="CalculateDoubleFactorial">Factorial</button> 
        </td>
    </tr>
    <tr>
        <td>@number !!&nbsp;</td>
        <td><input style="text-align:right" @bind="result"/></td>
    </tr>
</table> 
<br/>

@code {

    private int number = 0;

    private long result = 2;

    private void CalculateDoubleFactorial()
    {
        int n = number;
        if (n <= 0)
        {
            result = -1;
            return;
        }

        if (n % 2 == 0)
        {
            int i = n;
            result = 2;
            do
            {
                result *= i;
                i -= 2;
            } 
            while (i >= 2);
        }
        else
        {
            int i = n;
            result = 1;
            do
            {
                result *= i;
                i -= 2;
            } 
            while (i >= 1);
        }
    }
}
